generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Account {
  id                String  @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model User {
  id             String         @id @default(cuid())
  name           String?
  username       String         @unique
  email          String?        @unique
  emailVerified  DateTime?      @map("email_verified")
  hashedPassword String?
  image          String?
  totalSnippets  Int            @default(0)
  lastActiveAt   DateTime?
  accounts       Account[]
  sessions       Session[]
  snippets       Snippet[]
  comments       Comment[]
  posts          Post[]
  bookMarks      BookMark[]
  questions      Question[]
  answers        Answer[]
  articles       Article[]
  postLikes      PostLike[]
  questionLikes  QuestionLike[]
  articleLikes   ArticleLikes[]
  snippetLikes   SnippetLike[]
}

enum SnippetVisibility {
  PUBLIC
  PRIVATE
  UNLISTED
}

enum CodeLanguage {
  HTML
  CSS
  React
  JAVASCRIPT
  TYPESCRIPT
  PYTHON
  JAVA
  C
  CPP
  GO
  RUST
  OTHER
}

model Snippet {
  id           String            @id @default(cuid())
  user         User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId       String
  title        String
  code         String            @db.Text
  description  String
  visibility   SnippetVisibility
  language     CodeLanguage      @default(JAVASCRIPT)
  created_at   DateTime          @default(now())
  updated_at   DateTime          @updatedAt
  tags         SnippetTag[]
  comments     Comment[]
  bookmark     BookMark[]
  snippetLikes SnippetLike[]

  @@index([userId])
  @@index([created_at])
}

model SnippetLike {
  id        String   @id @default(cuid())
  snippet   Snippet  @relation(fields: [snippetId], references: [id], onDelete: Cascade)
  snippetId String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  createdAt DateTime @default(now())

  @@unique([snippetId, userId])
}

model Tag {
  id       String       @id @default(uuid())
  name     String       @unique
  snippets SnippetTag[]
  posts    PostTag[]
  article  ArticleTag[]
}

model SnippetTag {
  id        String  @id @default(uuid())
  snippet   Snippet @relation(fields: [snippetId], references: [id], onDelete: Cascade)
  snippetId String
  tag       Tag     @relation(fields: [tagId], references: [id], onDelete: Cascade)
  tagId     String
}

model ArticleTag {
  id        String  @id @default(ulid())
  article   Article @relation(fields: [articleId], references: [id], onDelete: Cascade)
  articleId String
  tag       Tag     @relation(fields: [tagId], references: [id])
  tagId     String

  @@unique([articleId, tagId])
}

model Comment {
  id              String    @id @default(cuid())
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId          String
  commentText     String
  commentableId   String
  commentableType String
  created_at      DateTime  @default(now())
  updated_at      DateTime  @updatedAt
  snippet         Snippet?  @relation(fields: [snippetId], references: [id], onDelete: Cascade)
  snippetId       String?
  post            Post?     @relation(fields: [postId], references: [id])
  postId          String?
  question        Question? @relation(fields: [questionId], references: [id])
  questionId      String?
  article         Article?  @relation(fields: [articleId], references: [id])
  articleId       String?
}

model Post {
  id          String     @id @default(cuid())
  user        User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String
  title       String
  description String
  image       String[]
  links       String[]
  comment     Comment[]
  bookmark    BookMark[]
  tags        PostTag[]
  created_at  DateTime   @default(now())
  updated_at  DateTime   @updatedAt
  postLikes   PostLike[]

  @@index([userId])
  @@index([created_at])
}

model PostLike {
  id        String   @id @default(cuid())
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  postId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  createdAt DateTime @default(now())

  @@unique([postId, userId])
}

model PostTag {
  id     String @id @default(cuid())
  post   Post   @relation(fields: [postId], references: [id], onDelete: Cascade)
  postId String
  tag    Tag    @relation(fields: [tagId], references: [id], onDelete: Cascade)
  tagId  String

  @@unique([postId, tagId])
}

model Question {
  id            String         @id @default(cuid())
  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId        String
  title         String
  description   String
  created_at    DateTime       @default(now())
  updated_at    DateTime       @updatedAt
  bookmark      BookMark[]
  comments      Comment[]
  answer        Answer[]
  questionLikes QuestionLike[]

  @@index([userId])
  @@index([created_at])
}

model QuestionLike {
  id         String   @id @default(cuid())
  question   Question @relation(fields: [questionId], references: [id], onDelete: Cascade)
  questionId String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     String
  createdAt  DateTime @default(now())

  @@unique([questionId, userId])
}

model Answer {
  id          String   @id @default(cuid())
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String
  description String
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt
  question    Question @relation(fields: [questionId], references: [id], onDelete: Cascade)
  questionId  String

  @@index([questionId])
  @@index([userId])
}

model BookMark {
  id     String @id @default(cuid())
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String

  post   Post?   @relation(fields: [postId], references: [id], onDelete: Cascade)
  postId String?

  snippet   Snippet? @relation(fields: [snippetId], references: [id], onDelete: Cascade)
  snippetId String?

  created_at DateTime  @default(now())
  question   Question? @relation(fields: [questionId], references: [id], onDelete: Cascade)
  questionId String?

  article   Article? @relation(fields: [articleId], references: [id])
  articleId String?

  @@unique([userId, postId])
  @@unique([userId, snippetId])
  @@unique([userId, questionId])
  @@unique([userId,articleId])
}

model Article {
  id           String         @id @default(cuid())
  user         User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId       String
  title        String
  description  String
  image        String[]
  links        String[]
  bookmark     BookMark[]
  created_at   DateTime       @default(now())
  updated_at   DateTime       @updatedAt
  articleTags  ArticleTag[]
  comments     Comment[]
  articleLikes ArticleLikes[]

  @@index([userId])
  @@index([created_at])
}

model ArticleLikes {
  id        String   @id @default(cuid())
  article   Article  @relation(fields: [articleId], references: [id], onDelete: Cascade)
  articleId String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  createdAt DateTime @default(now())

  @@unique([articleId, userId])
}
